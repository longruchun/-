package com.shaodq.chapter1.d20180706;

import java.util.Scanner;

public class teachSample_2 {

	public static void main(String[] args) {
		//从键 盘接收输入数据， 我们需要首先定义一个输入器
		//我们需要实例化一个Scanner 类的对象，
		//Scanner 类的对象来解决键 盘输入问题
		
		Scanner input=new Scanner(System.in);
		
		//提示一句用户从键盘输入:
		System.out.println("请输入一个数字:");
		
		int huasi=input.nextInt();
		
		System.out.println("你输入的数字是:"+huasi);
	}

}
